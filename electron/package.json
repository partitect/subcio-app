{
  "name": "subcio-desktop",
  "version": "1.0.0",
  "description": "Subcio - AI Karaoke Subtitle Editor",
  "main": "main.js",
  "author": "Subcio Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start:frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "start:frontend": "cd ../frontend && npm run dev",
    "prepare-python": "node scripts/prepare-python.js",
    "prebuild": "node build.js",
    "build": "electron-builder --win",
    "build:nsis": "electron-builder --win nsis",
    "build:portable": "electron-builder --win portable",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.subcio.app",
    "productName": "Subcio",
    "copyright": "Copyright Â© 2024 Subcio",
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "python-embedded/**/*",
      "ffmpeg/**/*",
      "backend/**/*",
      "!backend/**/__pycache__/**",
      "!backend/**/venv/**",
      "!backend/**/.env",
      "frontend-dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Subcio"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "subcio",
      "repo": "subcio-desktop"
    }
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}